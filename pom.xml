			<id>local</id>
			<properties>
				<spring.profiles.active>local</spring.profiles.active>
			</properties>
			<dependencies>
				<!-- https://mvnrepository.com/artifact/ch.vorburger.mariaDB4j/mariaDB4j-springboot -->

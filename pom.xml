					<groupId>ch.vorburger.mariaDB4j</groupId>
					<artifactId>mariaDB4j-springboot</artifactId>
					<version>2.4.0</version>
				</dependency>
			</dependencies>
		</profile>
		<profile>
			<id>remote</id>
			<properties>
				<spring.profiles.active>remote</spring.profiles.active>
			</properties>
			<dependencies>
			</dependencies>
		</profile>
	</profiles>

